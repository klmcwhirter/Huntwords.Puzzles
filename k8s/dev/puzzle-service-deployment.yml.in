apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: puzzle-service
spec:
  selector:
    matchLabels:
      app: puzzle-service
      tier: backend
      env: dev
  replicas: 1
  template:
    metadata:
      labels:
        app: puzzle-service
        tier: backend
        env: dev
    spec:
      containers:
      - name: puzzle-service
        image: klmcwhirter/puzzle-service-@TARGET@:@VERSION@
        resources:
          requests:
            cpu: 100m
            memory: 100Mi
        ports:
        - name: puzzle-service
          containerPort: 5000
        volumeMounts:
        - mountPath: "/app/data"
          name: puzzles-db
      volumes:
        - name: puzzles-db
          hostPath:
            path: @DATA@
            type: Directory
