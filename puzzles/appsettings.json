{
    "Logging": {
        "IncludeScopes": false,
        "LogLevel": {
            "Default": "Information",
            "System": "Information",
            "Microsoft": "Information"
        }
    },
    "Word": {
        "wordFilePath": "data/words",
        "bible-wordFilePath": "bible",
        "minWordLength": 3,
        "maxWordLength": 15
    },
    "Board": {
        "cacheSize": 5,
        "maxWidth": 15,
        "maxHeight": 15,
        "minWords": 15,

        "retries": 2048,
        "diagonalRatio": 0.095,
        "randomFactor": 32,

        "wordDensity": 0.6
    },
    "Tasks": {
        "maxDegreeOfParallelism-comment": "Anything larger than 1 with just a few cores decreases performance tremendously",
        "maxDegreeOfParallelism": 1
    },
    "ConnectionStrings": {
        "puzzles-comment": "Make sure to mount data volume at /app/data in Docker",
        "puzzles": "Filename=data/puzzles.sqlite"
    }
}
